<%= form_for(@message, url: home_path(params[:id]), method: :patch) do |f| %>
  <%= f.label :price, "Price" %>
  <%= f.text_field :price %>

  <%= f.label :entry, "Entry" %>
  <%= f.text_field :entry %>

  <%= f.label :borrow_lend, "Borrow 0 or Lend 1" %>
  <%= f.text_field :borrow_lend %>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
